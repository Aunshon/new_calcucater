<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aunshon.new_calcucater.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/all_num"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="viewEnd"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        />


    <TextView
        android:id="@+id/ans"
        android:layout_below="@+id/all_num"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="0 "
        android:textAlignment="viewEnd"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/ans"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/one_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/two_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/three_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="3"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/mul_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="*"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/four_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/five_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="5"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/six_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="6"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/division_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="/"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/seven_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="7"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/eight_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="8"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/nine_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="9"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/plus_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/point_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="."
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/zero_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/minus_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/back_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="B"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/clear_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="C"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/equal_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/colorPrimaryDark"

                android:text="="
                android:textColor="@android:color/black"
                android:textSize="30dp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
